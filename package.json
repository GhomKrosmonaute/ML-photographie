{
  "main": "dist/main.js",
  "prettier": {
    "semi": false
  },
  "nodemonConfig": {
    "delay": 2500,
    "ignore": [
      "node_modules/*",
      "src/*"
    ]
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src",
    "start": "tsc && node dist/main.js",
    "watch.build": "tsc --watch",
    "watch.start": "nodemon dist/main.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.11",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "knex": "^0.95.14",
    "sqlite3": "^5.0.2"
  }
}
