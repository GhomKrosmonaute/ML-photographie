{
  "main": "dist/main.js",
  "prettier": {
    "semi": false
  },
  "nodemonConfig": {
    "delay": 2500,
    "ignore": [
      "node_modules/*",
      "src/*",
      "public/*",
      "views/*",
      "data/*"
    ]
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src public react",
    "start": "tsc && node dist/main.js",
    "watch.build": "tsc --watch",
    "watch.start": "nodemon dist/main.js"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/ejs": "^3.1.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/node": "^16.11.11",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-react-views": "^0.11.0",
    "express-session": "^1.17.2",
    "font-awesome": "^4.7.0",
    "gulp": "^4.0.2",
    "gulp-sass": "^5.0.0",
    "knex": "^0.95.14",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "sqlite3": "^5.0.2"
  }
